<div class="group">
  <div class="my_group">
    <h2>グループ</h2>
    <% current_user.groups.each do |group| %>
    <div class="group_list">
      <div class="group_name">
        <%= link_to group_comments_path(group) do %>
        <u><p><%= group.name %></p></u>
        <% end %>
      </div>
      <p class="group_member">メンバー：</p>
      <% group.users.each do |user|%>
      <%= user.name %>
      <% end %>
    </div><br>
    <% end %>
  </div>

  <div class="group_edit">
    <a href="/groups/new", class="other_login"><u><p>新規作成はコチラ</p></u></a><br>
  </div>

</div>