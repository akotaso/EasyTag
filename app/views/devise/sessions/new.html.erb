<div class="contents row">
  <div class="container">
    <h2>ログイン</h2>

    <%= form_for (@user), url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, placeholder: "メールアドレスを入力してください",autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, placeholder: "パスワードを入力してください",autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me %><br />
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
    <a href="/users/sign_up", class="other_login"><p>新規登録はこちら</p></a>
    <br>
    <div class="testacount">
      <p>テストアカウントでログインできます</p>
      <u><p>Email: test@gmail.com / Password: testtest</p></u>
      <p>をご入力ください</p>
    </div>

  </div>
</div>