  <div class="comment">
      <div class="group_area">
        <div class="group_area_content">
          <h2>グループ：</h2>
          <% current_user.groups.each do |group| %>
          <div class="group_area_list">
            <ul>
              <li><a href="", class="group_area_name"><%= group.name %></a></li>
            </ul>
          <% end %>
          </div>
        </div>
      </div>

      <div class="comment_area">
        <div class="comment_area_box">
        <% @comments.each do |comment| %>
          <div class="comment_area_box_comment">
          <%= comment.content %><div class="comment_user">あっこ</div><br>
          </div>
        <% end %>
        </div>
      </div>

      <div class="comment_area_message-form">
        <%= form_for(@comment) do |f| %>
          <%= f.text_field :content, class:"comment_form", size:30, placeholder:"メッセージ" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
  </div>
