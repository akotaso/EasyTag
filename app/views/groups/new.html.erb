<div class="group">
  <h2>グループ作成</h2>
  <%= form_for @group, id: 'new_group', class: 'new_group', local: true do |f| %>

    <div class="group_form_name">
      <%= f.label :"グループ名を入力してください" %><br />
      <%= f.text_field :name %>
    </div>

  <div class="group_form_member-list">
    <p>追加したいユーザー名を入力してください</p>
    <input id="group_form_member-search">

    <div id="group_form_member-search-result"></div>


    <div class="current_group-member"><br>
      <p><u>グループメンバー</u></p><br>
        <input name="group[user_ids][]" type="hidden" value="<%= current_user.id %>" >
        <p class=""><%= current_user.name %></p>
        <div class="js-add-user"></div>
    </div>

  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>

  <% end %>
</div>