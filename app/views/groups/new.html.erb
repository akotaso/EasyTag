<div class="group">
  <h2>グループ作成</h2>
  <%= form_for @group, id: 'new_group', class: 'new_group', local: true do |f| %>


    <div class="group_form_name">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

  <div class="group_form_member-list">

    <input id="group_form_member-search", placeholder="追加したいユーザー名を入力してください" >

    <p>追加したいメンバーにチェックを入れてください</p>
    <div class="group_form_member">
      <%= f.collection_check_boxes :user_ids, User.all, :id, :name %>
    </div>

  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>

  <% end %>
</div>